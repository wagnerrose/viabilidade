<%- model_class = Equipamento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:designacao) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:enderecamento) %></th>
      <th><%= model_class.human_attribute_name(:firmware) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:arco) %></th>
      <th><%= model_class.human_attribute_name(:cluster) %></th>
      <th><%= model_class.human_attribute_name(:estacao_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= equipamento.designacao %></td>
        <td><%= equipamento.descricao %></td>
        <td><%= equipamento.tipo %></td>
        <td><%= equipamento.enderecamento %></td>
        <td><%= equipamento.firmware %></td>
        <td><%= equipamento.status %></td>
        <td><%= equipamento.arco %></td>
        <td><%= equipamento.cluster %></td>
        <td><%= equipamento.estacao.pop %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      equipamento_path(equipamento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_equipamento_path(equipamento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      equipamento_path(equipamento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_equipamento_path,
            :class => 'btn btn-primary' %>
