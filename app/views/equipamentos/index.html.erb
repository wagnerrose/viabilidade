<p id="notice"><%= notice %></p>

<h1>Equipamentos</h1>

<table>
  <thead>
    <tr>
      <th>Designacao</th>
      <th>Descricao</th>
      <th>Tipo</th>
      <th>Enderecamento</th>
      <th>Firmware</th>
      <th>Estacao</th>
      <th>Status</th>
      <th>Arco</th>
      <th>Cluster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= equipamento.designacao %></td>
        <td><%= equipamento.descricao %></td>
        <td><%= equipamento.tipo %></td>
        <td><%= equipamento.enderecamento %></td>
        <td><%= equipamento.firmware %></td>
        <td><%= equipamento.estacao %></td>
        <td><%= equipamento.status %></td>
        <td><%= equipamento.arco %></td>
        <td><%= equipamento.cluster %></td>
        <td><%= link_to 'Show', equipamento %></td>
        <td><%= link_to 'Edit', edit_equipamento_path(equipamento) %></td>
        <td><%= link_to 'Destroy', equipamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

