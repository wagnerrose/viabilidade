<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag params[:controller] %>
<% end %>

<%- model_class = Resposta -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(count: @respostas.count).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:estrutura) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:prazo) %></th>
      <th><%= model_class.human_attribute_name(:capex) %></th>
      <th><%= model_class.human_attribute_name(:opex_instalacao) %></th>
      <th><%= model_class.human_attribute_name(:opex_mensal) %></th>
      <th><%= model_class.human_attribute_name(:resultado_vt) %></th>
      <th><%= model_class.human_attribute_name(:solicitacao_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @respostas.each do |resposta| %>
      <tr>
        <!--<td><%= link_to resposta.id, resposta_path(resposta) %></td>-->
        <td><%= resposta.tipo %></td>
        <td><%= resposta.estrutura %></td>
        <td><%= resposta.descricao %></td>
        <td><%= resposta.prazo %></td>
        <td><%= resposta.capex %></td>
        <td><%= resposta.opex_instalacao %></td>
        <td><%= resposta.opex_mensal %></td>
        <td><%= resposta.resultado_vt %></td>
        <td><%= resposta.solicitacao_id %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      resposta_path(resposta), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_resposta_path(resposta), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      resposta_path(resposta),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_resposta_path,
            :class => 'btn btn-primary' %>
