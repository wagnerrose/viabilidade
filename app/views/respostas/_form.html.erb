<%= simple_form_for @resposta, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :tipo %>
  <%= error_span(@resposta[:tipo]) %>
  <%= f.input :estrutura %>
  <%= error_span(@resposta[:estrutura]) %>
  <%= f.input :descricao %>
  <%= error_span(@resposta[:descricao]) %>
  <%= f.input :prazo %>
  <%= error_span(@resposta[:prazo]) %>
  <%= f.input :capex %>
  <%= error_span(@resposta[:capex]) %>
  <%= f.input :opex_instalacao %>
  <%= error_span(@resposta[:opex_instalacao]) %>
  <%= f.input :opex_mensal %>
  <%= error_span(@resposta[:opex_mensal]) %>
  <%= f.input :resultado_vt %>
  <%= error_span(@resposta[:resultado_vt]) %>
  <%= f.input :solicitacao_id %>
  <%= error_span(@resposta[:solicitacao_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                respostas_path, :class => 'btn btn-default' %>
<% end %>
