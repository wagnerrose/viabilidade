<%- model_class = Estacao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div id="sombrarredondada">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:estacao) %></th>
            <th><%= model_class.human_attribute_name(:nome) %></th>        
            <th><%= model_class.human_attribute_name(:cidade) %></th>
            <th><%= model_class.human_attribute_name(:status) %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @estacao.estacao %></td>
            <td><%= @estacao.nome %></td>
            <td><%= @estacao.cidade %></td>
            <td><%= @estacao.status %></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-condensed">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:cedente) %></th>        
            <th><%= model_class.human_attribute_name(:tipo) %></th>
            <th><%= model_class.human_attribute_name(:latitude) %></th>        
            <th><%= model_class.human_attribute_name(:longitude) %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @estacao.cedente %></td>
            <td><%= @estacao.tipo %></td>
            <td><%=  number_with_precision(@estacao.latitude, precision: 10, separator: ',' , locale: 'pt-BR' ) %></td>
            <td><%=  number_with_precision(@estacao.longitude, precision: 10, separator: ',' , locale: 'pt-BR' ) %></td>          </tr>
        </tbody>
      </table>              
</div>

# criando apresentacao dos equipamento associados a estação

<div>
<table>
  <thead>
    <tr>
      <th>Designacao</th>
      <th>Descricao</th>
      <th>Tipo</th>
      <th>Enderecamento</th>
      <th>Firmware</th>
      <th>Estacao</th>
      <th>Status</th>
      <th>Arco</th>
      <th>Cluster</th>
    </tr>
  </thead>

  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= equipamento.designacao %></td>
        <td><%= equipamento.descricao %></td>
        <td><%= equipamento.tipo %></td>
        <td><%= equipamento.enderecamento %></td>
        <td><%= equipamento.firmware %></td>
        <td><%= equipamento.estacao %></td>
        <td><%= equipamento.status %></td>
        <td><%= equipamento.arco %></td>
        <td><%= equipamento.cluster %></td>
      </tr>
    <% end %>
  </tbody>
</table>  
  
  
</div>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  estacaes_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_estacao_path(@estacao), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  estacao_path(@estacao),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
