<%- model_class = Estacao -%>

<div class="list-group">
  <h1 class="list-group-item-heading list-group-item-info">
        <center><%=t '.title', :default => model_class.model_name.human.titleize %> - <%= @estacao.pop %></center>
  </h1>
</div> <!-- list-group-->

<div id="sombrarredondada">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:nome) %></th>        
        <th><%= model_class.human_attribute_name(:endereco) %></th> 
        <th><%= model_class.human_attribute_name(:uf) %></th>
        <th><%= model_class.human_attribute_name(:cidade) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @estacao.nome %></td>
        <td><%= @estacao.endereco %></td>
        <td><%= @estacao.uf %></td>
        <td><%= @estacao.cidade %></td>
      </tr>
    </tbody>
  </table>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:status) %></th>
        <th><%= model_class.human_attribute_name(:cedente) %></th>        
        <th><%= model_class.human_attribute_name(:tipo) %></th>
        <th><%= model_class.human_attribute_name(:latitude) %></th>        
        <th><%= model_class.human_attribute_name(:longitude) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @estacao.status %></td>
        <td><%= @estacao.cedente %></td>
        <td><%= @estacao.tipo %></td>
        <td><%=  number_with_precision(@estacao.latitude, precision: 10, separator: ',' , locale: 'pt-BR' ) %></td>
        <td><%=  number_with_precision(@estacao.longitude, precision: 10, separator: ',' , locale: 'pt-BR' ) %></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              estacoes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_estacao_path(@estacao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              estacao_path(@estacao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%- model_class_eqto = Equipamento -%>
<div class="list-group">
  <h1 class="list-group-item-heading list-group-item-success">
        <center><%=t '.title', :default => model_class_eqto.model_name.human.pluralize.titleize %></center>
  </h1>
</div> <!-- list-group-->

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class_eqto.human_attribute_name(:designacao) %></th>
      <th><%= model_class_eqto.human_attribute_name(:descricao) %></th>
      <th><%= model_class_eqto.human_attribute_name(:tipo) %></th>
      <th><%= model_class_eqto.human_attribute_name(:enderecamento) %></th>
      <th><%= model_class_eqto.human_attribute_name(:firmware) %></th>
      <th><%= model_class_eqto.human_attribute_name(:status) %></th>
      <th><%= model_class_eqto.human_attribute_name(:arco) %></th>
      <th><%= model_class_eqto.human_attribute_name(:cluster) %></th>
    </tr>
  </thead>
  <tbody>
    <% @equipamentos.each do |equipamento| %>
      <tr>
        <td><%= link_to equipamento.designacao, equipamento_path(equipamento), :title => "Detalhar" %></td>
        <td><%= equipamento.descricao %></td>
        <td><%= equipamento.tipo %></td>
        <td><%= equipamento.enderecamento %></td>
        <td><%= equipamento.firmware %></td>
        <td><%= equipamento.status %></td>
        <td><%= equipamento.arco %></td>
        <td><%= equipamento.cluster %></td>
      </tr>
    <% end %>
  </tbody>
</table>

