<%- model_class_estacao = Estacao -%>
<%- model_class_eqto = Equipamento -%>

<div class="list-group ">
  <h1 class="list-group-item-heading list-group-item-info">
        <center><%=t '.title', :default => model_class_estacao.model_name.human.titleize %> - <%= @estacao.pop %></center>
  </h1>
</div> <!-- list-group-->
<div class="row">
  <div class="quadroBotoes">
    <div>
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      estacoes_path, :class => 'btn botao btn-sm btn-block'  %>
    </div>
    <div>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estacao_path(@estacao), :class => 'btn botao btn-sm btn-block' %>
    </div>
    <div>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estacao_path(@estacao),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn botaoApaga btn-sm btn-block' %>
    </div>
  </div><!-- quadroBotoes -->

  <div class="quadroDados">
    <div class="row" style="margin: 10px 0px;">
        <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:nome) %>: </div>
        <div class="campoDados"><%= @estacao.nome %></div>
        <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:endereco) %>: </div>
        <div class="campoDados" sytle="width: 600px"><%=  @estacao.endereco %></div>
      </div>
      <div class="row" style="margin: 10px 0px;">
        <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:uf) %>:</div>
        <div class="campoDados"><%= @estacao.uf %></div>
        <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:cidade) %>: </div>
        <div class="campoDados"><%= @estacao.cidade %></div>
    </div>

    <div class="row" style="margin: 10px 0px;">
      <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:status) %>: </div>
      <div class="campoDados"><%= @estacao.status %></div>
      <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:cedente) %>: </div>
      <div class="campoDados"><%= @estacao.cedente %></div>        
      <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:tipo) %>: </div>
      <div class="campoDados"><%= @estacao.tipo %></div>
    </div> <!-- row -->
    <div class="row" style="margin: 10px 0px;">
      <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:latitude) %>: </div>
      <div class="campoDados"><%= number_with_precision(@estacao.latitude, precision: 10, separator: ',' , locale: 'pt-BR') %></div>        
      <div class="campoRotulo"><%= model_class_estacao.human_attribute_name(:longitude) %>: </div>
      <div class="campoDados"><%= number_with_precision(@estacao.longitude, precision: 10, separator: ',' , locale: 'pt-BR') %></div>
    </div> <!-- row -->

  </div> <!-- quadro dados -->
</div> <!-- div quadro superior -->

  <div class="list-group">
    <h1 class="list-group-item-heading list-group-item-success">
          <center><%=t '.title', :default => model_class_eqto.model_name.human.pluralize.titleize %></center>
    </h1>
  </div> <!-- list-group-->

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class_eqto.human_attribute_name(:designacao) %></th>
        <th><%= model_class_eqto.human_attribute_name(:descricao) %></th>
        <th><%= model_class_eqto.human_attribute_name(:tipo) %></th>
        <th><%= model_class_eqto.human_attribute_name(:enderecamento) %></th>
        <th><%= model_class_eqto.human_attribute_name(:firmware) %></th>
        <th><%= model_class_eqto.human_attribute_name(:status) %></th>
        <th><%= model_class_eqto.human_attribute_name(:arco) %></th>
        <th><%= model_class_eqto.human_attribute_name(:cluster) %></th>
      </tr>
    </thead>
    <tbody>
      <% @equipamentos.each do |equipamento| %>
        <tr>
          <td><%= link_to equipamento.designacao, equipamento_path(equipamento), :title => "Detalhar" %></td>
          <td><%= equipamento.descricao %></td>
          <td><%= equipamento.tipo %></td>
          <td><%= equipamento.enderecamento %></td>
          <td><%= equipamento.firmware %></td>
          <td><%= equipamento.status %></td>
          <td><%= equipamento.arco %></td>
          <td><%= equipamento.cluster %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
