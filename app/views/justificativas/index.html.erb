<%- model_class = Justificativa -%>

<div class="list-group">
  <h1 class="list-group-item-heading list-group-item-info">
        <center><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></center>
  </h1>
</div>

<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <table class="table table-striped" id="justificativas">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:nome) %></th>
          <th><%= model_class.human_attribute_name(:cod_justificativa) %></th>
          <th><%= model_class.human_attribute_name(:tipo) %></th>
        </tr>
      </thead>
      <tbody>
        <% @justificativas.each do |justificativa| %>
          <tr>
            <td><%= link_to justificativa.nome, justificativa_path(justificativa) %></td>
            <td><%= justificativa.cod_justificativa %></td>
            <td><%= justificativa.tipo %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- div tabela-->
  <div class="col-sm-3"></div>
</div><!-- /div row -->
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_justificativa_path,
                  :class => 'btn btn-primary' %>
    </div><!-- div botao -->
  </div>