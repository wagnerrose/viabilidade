<%- model_class = Uf -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped ">
  <thead>
    <tr>
      <!--<th><%= sortable "id" %> </th>-->
      <th class="text-center"> <%= sortable "sigla" %></th>
      <th class="text-center"> <%= sortable "nome" %></th>
      <!--<th><%= sortable model_class.human_attribute_name(:created_at)%> </th>-->
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @uf.each do |uf| %>
      <tr>
        <!--<td><%= link_to uf.id, uf_path(uf) %></td>-->
        <td class="text-center"><%= uf.sigla %></td>
        <td class="text-center"><%= uf.nome %></td>
        <!--<td><%=l uf.created_at %></td>-->
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      uf_path(uf), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_uf_path(uf), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      uf_path(uf),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_uf_path,
            :class => 'btn btn-primary' %>
