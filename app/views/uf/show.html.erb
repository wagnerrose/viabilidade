<%- model_class = Uf -%>
<div class="elegant-aero">
  <div class="list-group">
    <h1 class="list-group-item-heading list-group-item-info">
          <center><%=t '.title', :default => model_class.model_name.human.titleize.upcase %></center>
    </h1>
  </div> <!-- list-group-->
  
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:sigla) %>:</strong></dt>
    <dd><%= @uf.sigla %></dd>
    <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
    <dd><%= @uf.nome %></dd>
  </dl>
  <div class="dl-horizontal">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  uf_index_path, :class => 'button'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_uf_path(@uf), :class => 'button' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  uf_path(@uf),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'buttonApaga' %>
  </div>
              
</div>
