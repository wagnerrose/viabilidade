<%- model_class = Servico -%>
<div class="list-group">
  <h1 class="list-group-item-heading list-group-item-info">
        <center><%=t '.title', :default => model_class.model_name.human.titleize %></center></h1>
</div> <!-- list-group-->

<div class="container">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
    <dd><%= @servico.nome %></dd>
    <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
    <dd><%= @servico.codigo %></dd>
  </dl>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              servicos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_servico_path(@servico), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              servico_path(@servico),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
