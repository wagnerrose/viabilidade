
<%- model_class = Empresa -%>
<div class= "box-show">
  <div class="list-group">
    <h1 class="list-group-item-heading list-group-item-info">
          <center><%=t '.title', :default => model_class.model_name.human.titleize %></center>
    </h1>
  </div> <!-- list-group-->
  
  <dl class="dl-horizontal">
    <dt class="campoRotulo"><%= model_class.human_attribute_name(:razao) %>:</dt>
    <dd><%= @empresa.razao %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:nome_fantasia) %>:</dt>
    <dd><%= @empresa.nome_fantasia %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:cnpj) %>:</dt>
    <dd><%= @empresa.cnpj %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:sap) %>:</dt>
    <dd><%= @empresa.sap %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:endereco) %>:</dt>
    <dd><%= @empresa.endereco %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:cidade) %>:</dt>
    <dd><%= @empresa.cidade %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:cep) %>:</dt>
    <dd><%= @empresa.cep %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:uf) %>:</dt>
    <dd><%= @empresa.uf %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:nome_contato) %>:</dt>
    <dd><%= @empresa.nome_contato %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:fixo) %>:</dt>
    <dd><%= @empresa.fixo %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:celular) %>:</dt>
    <dd><%= @empresa.celular %></dd>
    <dt  class="campoRotulo"><%= model_class.human_attribute_name(:email) %>:</dt>
    <dd><%= @empresa.email %></dd>
  </dl>
</div>
<div class="box-show">
  <center>
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    empresas_path, :class => 'btn botao btn-sm'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_empresa_path(@empresa), :class => 'btn botao btn-sm' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    empresa_path(@empresa),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn botaoApaga btn-sm ' %>
  </center>
</div><!-- div botoes -->