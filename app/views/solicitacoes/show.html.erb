<%- model_class = Solicitacao -%>
<div class="list-group"></div>
  <h1 class="list-group-item-heading list-group-item-info"><center><%=t '.title', :default => model_class.model_name.human.titleize %> - <%= @solicitacao.numero_vt %></center></h1>
<div class="container">

<div id="sombrarredondada">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:numero_vt) %></th>        
        <th><%= model_class.human_attribute_name(:empresa_id) %></th> 
        <th><%= model_class.human_attribute_name(:data_solicitacao) %></th>
        <th><%= model_class.human_attribute_name(:solicitante) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @solicitacao.numero_vt %></td>
        <td><%= @solicitacao.empresa.razao %></td>
        <td><%= @solicitacao.data_solicitacao %></td>
        <td><%= @solicitacao.solicitante %></td>
      </tr>
    </tbody>
  </table>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:servico) %></th>
        <th><%= model_class.human_attribute_name(:banda) %></th>        
        <th><%= model_class.human_attribute_name(:endereco_a) %></th>
        <th><%= model_class.human_attribute_name(:localidade_a) %></th>        
        <th><%= model_class.human_attribute_name(:uf_a) %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @solicitacao.servico %></td>
        <td><%= @solicitacao.banda %></td>
        <td><%= @solicitacao.endereco_a %></td>
        <td><%= @solicitacao.localidade_a %></td>
        <td><%= @solicitacao.uf_a %></td>
      </tr>
    </tbody>
  </table>
</div>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:endereco_b) %></th>
        <th><%= model_class.human_attribute_name(:localidade_b) %></th>        
        <th><%= model_class.human_attribute_name(:uf_b) %></th>

      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @solicitacao.endereco_b %></td>
        <td><%= @solicitacao.localidade_b %></td>
        <td><%= @solicitacao.uf_b %></td>

      </tr>
    </tbody>
  </table>
</div>
<div class="btn-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
                solicitacoes_path, :class => 'btn btn-info btn-sm'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_solicitacao_path(@solicitacao), :class => 'btn btn-info btn-sm' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                solicitacao_path(@solicitacao),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger btn-sm' %>
</div>


