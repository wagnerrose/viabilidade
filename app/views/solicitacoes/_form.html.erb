<%= simple_form_for @solicitacao, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :numero_vt %>
  <%= error_span(@solicitacao[:numero_vt]) %>
  <%= f.input :data_solicitacao %>
  <%= error_span(@solicitacao[:data_solicitacao]) %>
  <%= f.input :solicitante %>
  <%= error_span(@solicitacao[:solicitante]) %>
  <%= f.input :analista %>
  <%= error_span(@solicitacao[:analista]) %>
  <%= f.input :servico %>
  <%= error_span(@solicitacao[:servico]) %>
  <%= f.input :banda %>
  <%= error_span(@solicitacao[:banda]) %>
  <%= f.input :endereco_a %>
  <%= error_span(@solicitacao[:endereco_a]) %>
  <%= f.input :localidade_a %>
  <%= error_span(@solicitacao[:localidade_a]) %>
  <%= f.input :uf_a %>
  <%= error_span(@solicitacao[:uf_a]) %>
  <%= f.input :endereco_b %>
  <%= error_span(@solicitacao[:endereco_b]) %>
  <%= f.input :localidade_b %>
  <%= error_span(@solicitacao[:localidade_b]) %>
  <%= f.input :uf_b %>
  <%= error_span(@solicitacao[:uf_b]) %>
  <%= f.input :resultado_vt %>
  <%= error_span(@solicitacao[:resultado_vt]) %>
  <%= f.input :empresa_id %>
  <%= error_span(@solicitacao[:empresa_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                solicitacoes_path, :class => 'btn btn-default' %>
<% end %>
