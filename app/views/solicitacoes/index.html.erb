<%- model_class = Solicitacao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:numero_vt) %></th>
      <th><%= model_class.human_attribute_name(:data_solicitacao) %></th>
      <th><%= model_class.human_attribute_name(:solicitante) %></th>
      <th><%= model_class.human_attribute_name(:servico) %></th>
      <th><%= model_class.human_attribute_name(:banda) %></th>
      <th><%= model_class.human_attribute_name(:localidade_a) %></th>
      <th><%= model_class.human_attribute_name(:uf_a) %></th>
      <th><%= model_class.human_attribute_name(:localidade_b) %></th>
      <th><%= model_class.human_attribute_name(:uf_b) %></th>
      <!--<th><%=t '.actions', :default => t("helpers.actions") %></th>-->
    </tr>
  </thead>
  <tbody>
    <% @solicitacoes.each do |solicitacao| %>
      <tr>
        <td><%= link_to solicitacao.numero_vt, solicitacao_path(solicitacao), :title => "Detalhar" %></td>
        <td><%= solicitacao.data_solicitacao %></td>
        <td><%= solicitacao.solicitante %></td>
        <td><%= solicitacao.servico %></td>
        <td><%= solicitacao.banda %></td>
        <td><%= solicitacao.localidade_a %></td>
        <td><%= solicitacao.uf_a %></td>
        <td><%= solicitacao.localidade_b %></td>
        <td><%= solicitacao.uf_b %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      solicitacao_path(solicitacao), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_solicitacao_path(solicitacao), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      solicitacao_path(solicitacao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_solicitacao_path,
            :class => 'btn btn-primary' %>
