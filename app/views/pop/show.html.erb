<%- model_class = Pop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @pop.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:designacao) %>:</strong></dt>
  <dd><%= @pop.designacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detentor) %>:</strong></dt>
  <dd><%= @pop.detentor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uf) %>:</strong></dt>
  <dd><%= @pop.uf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cod_localidade) %>:</strong></dt>
  <dd><%= @pop.cod_localidade %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pop_index_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pop_path(@pop), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pop_path(@pop),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
