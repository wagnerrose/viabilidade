<%= form_for @pop, :html => { :class => "form-horizontal pop" } do |f| %>

  <% if @pop.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pop.errors.count, "error") %> prohibited this pop from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pop.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :designacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :designacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:designacao) %>
  </div>
  <div class="form-group">
    <%= f.label :detentor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :detentor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:detentor) %>
  </div>
  <div class="form-group">
    <%= f.label :uf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :uf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:uf) %>
  </div>
  <div class="form-group">
    <%= f.label :cod_localidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cod_localidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cod_localidade) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pop_index_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
