
<%= form_for @servico, :html => { :class => "form-horizontal servico" } do |f| %>

  <% if @servico.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@servico.errors.count, "error") %> prohibited this servico from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @servico.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%#f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :codigo, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :codigo, :class => 'form-control' %>
    </div>
    <%#f.error_span(:codigo) %>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                servicos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
