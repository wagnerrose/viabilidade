<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag "#{params[:controller]}" %>
  <%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class = Servico -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <!-- codigo da pagina -->
    <div class="row" >
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
          <center>
            <h3><%=t '.title', :default => model_class.model_name.human.titleize %></h3>
          </center>
          </div>
          <div class="panel-body">
            <dl class="dl-horizontal" style="margin: 10px; font-size: 20px;">
              <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
              <dd><%= @servico.nome %></dd>
              <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
              <dd><%= @servico.codigo %></dd>
            </dl>
          </div><!-- panel-body -->
        </div><!-- panel -->
      </div><!-- centralizacao do painel -->
      <div class="col-lg-3"></div>
    </div> <!-- row -->
    <div class="row">
      <div class="col-lg-12">
        <center>
          <%= link_to t('.back', :default => t("helpers.links.back")),
          servicos_path, :class => 'btn botao btn-sm'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_servico_path(@servico), :class => 'btn botao btn-sm' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          servico_path(@servico),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn botaoApaga btn-sm' %>
        </center>
      </div><!-- div botoes -->
    </div>
  </div>
</div><!-- tudo -->

