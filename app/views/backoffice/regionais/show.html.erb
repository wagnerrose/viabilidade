<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
<%= stylesheet_link_tag "#{params[:controller]}" %>
<%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class = Regional -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="box-show">
          <div class="list-group">
            <h1 class="list-group-item-heading list-group-item-info" >
              <center><%=t '.title', :default => model_class.model_name.human.titleize %></center></h1>
            </div> <!-- list-group-->

            <dl class="dl-horizontal" >
              <dt><strong><%= model_class.human_attribute_name(:cod_regional) %>:</strong></dt>
              <dd><%= @regional.cod_regional %></dd>
              <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
              <dd><%= @regional.nome %></dd>
            </dl>
          </div>

          <div class="box-show">
            <center>
              <%= link_to t('.back', :default => t("helpers.links.back")),
              backoffice_regionais_path, :class => 'btn botao btn-sm'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_backoffice_regional_path(@regional), :class => 'btn botao btn-sm' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              backoffice_regional_path(@regional),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn botaoApaga btn-sm' %>
            </center>
          </div>
          <!--/ codigo da pagina -->

        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- / #page-wrapper -->
  <!-- / #wrapper <-->
