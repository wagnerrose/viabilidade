
<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag "#{params[:controller]}" %>
  <%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class = Circuito -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <!-- codigo da pagina -->
    <div class="row" >
    <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <div class="panel panel-info">
          <div class="panel-heading">
            <center><h1 >
              <%=t '.title', :default => model_class.model_name.human.titleize %>
            </h1></center>
          </div>
          <dl class="dl-horizontal" style="margin: 10px; font-size: 20px;" >
            <dt><strong><%= model_class.human_attribute_name(:designacao) %>:</strong></dt>
            <dd><%= @circuito.designacao %></dd>
            <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
            <dd><%= @circuito.descricao %></dd>
            <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
            <dd><%= @circuito.status %></dd>
            <dt><strong><%= model_class.human_attribute_name(:roteamento) %>:</strong></dt>
            <dd><%= @circuito.roteamento %></dd>
            <dt><strong><%= model_class.human_attribute_name(:asn) %>:</strong></dt>
            <dd><%= @circuito.asn %></dd>
            <dt><strong><%= model_class.human_attribute_name(:bandaContratada) %>:</strong></dt>
            <dd><%= @circuito.bandaContratada %></dd>
            <dt><strong><%= model_class.human_attribute_name(:bandaAtivada) %>:</strong></dt>
            <dd><%= @circuito.bandaAtivada %></dd>
            <dt><strong><%= model_class.human_attribute_name(:dataAtivacao) %>:</strong></dt>
            <dd><%= @circuito.dataAtivacao %></dd>
            <dt><strong><%= model_class.human_attribute_name(:contrato) %>:</strong></dt>
            <dd><%= @circuito.contrato %></dd>
            <dt><strong><%= model_class.human_attribute_name(:sap) %>:</strong></dt>
            <dd><%= @circuito.sap %></dd>
            <dt><strong><%= model_class.human_attribute_name(:empresa) %>:</strong></dt>
            <dd><%= @circuito.empresa %></dd>
          </dl>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div> <!-- row -->
    <div class="row">
      <div class="col-lg-12">
        <center>
          <%= link_to t('.back', :default => t("helpers.links.back")),
          analistas_path, :class => 'btn botao btn-sm'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_circuito_path(@circuito),
          :class => 'btn botao btn-sm' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          circuito_path(@circuito),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn botaoApaga btn-sm ' %>
        </center>
      </div> <!-- /.col-lg-12 -->
    </div><!-- row -->

  </div><!-- div container -->
</div>
