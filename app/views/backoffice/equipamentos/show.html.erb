<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
<%= stylesheet_link_tag "#{params[:controller]}" %>
<%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class = Equipamento -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <!-- codigo da pagina -->
    <div class="row" >
    <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <div class="panel panel-info">
          <div class="panel-heading">
            <center><h1 >
              <%=t '.title', :default => model_class.model_name.human.titleize %>
            </h1></center>
          </div>
          <dl class="dl-horizontal" style="margin: 10px; font-size: 20px;">
            <dt><strong><%= model_class.human_attribute_name(:designacao) %>:</strong></dt>
            <dd><%= @equipamento.designacao %></dd>
            <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
            <dd><%= @equipamento.descricao %></dd>
            <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
            <dd><%= @equipamento.tipo %></dd>
            <dt><strong><%= model_class.human_attribute_name(:enderecamento) %>:</strong></dt>
            <dd><%= @equipamento.enderecamento %></dd>
            <dt><strong><%= model_class.human_attribute_name(:firmware) %>:</strong></dt>
            <dd><%= @equipamento.firmware %></dd>
            <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
            <dd><%= @equipamento.status %></dd>
            <dt><strong><%= model_class.human_attribute_name(:arco) %>:</strong></dt>
            <dd><%= @equipamento.arco %></dd>
            <dt><strong><%= model_class.human_attribute_name(:cluster) %>:</strong></dt>
            <dd><%= @equipamento.cluster %></dd>
            <dt><strong><%= model_class.human_attribute_name(:estacao_id) %>:</strong></dt>
            <dd><%= @equipamento.estacao.pop %> - <%= @equipamento.estacao.nome  %></dd>
          </dl>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div> <!-- row -->
    <div class="row">
      <div class="col-lg-12">
          <center>
            <%= link_to t('.back', :default => t("helpers.links.back")),
            equipamentos_path, :class => 'btn botao btn-sm'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_equipamento_path(@equipamento),
              :class => 'btn botao btn-sm ' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            equipamento_path(@equipamento),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn botaoApaga btn-sm ' %>
          </center>
      </div> <!-- /.col-lg-12 -->
    </div><!-- row -->

  </div><!-- div container -->
</div>
