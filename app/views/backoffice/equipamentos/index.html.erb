<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag "#{params[:controller]}" %>
  <%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class = Equipamento -%>


<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="list-group">
          <h1 class="list-group-item-heading list-group-item-info" style="margin-top: 10px;">
            <center><%=t '.title', :default => model_class.model_name.human.titleize.pluralize %></center>
          </h1>
        </div>

        <div >
          <table id="equipamentos" class="table display"  data-source="<%= equipamentos_url(format: "json") %>" >
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:designacao) %></th>
                <th><%= model_class.human_attribute_name(:descricao) %></th>
                <th><%= model_class.human_attribute_name(:tipoEquipamento) %></th>
                <th><%= model_class.human_attribute_name(:enderecamento) %></th>
                <th><%= model_class.human_attribute_name(:statusEquipamento) %></th>
                <th><%= model_class.human_attribute_name(:estacao_id) %></th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
        <center>
          <%= link_to t('.new', :default => t("helpers.links.new")),
          new_equipamento_path,
          :class => 'btn botao btn-sm' %>
        </center>
        <!--/ codigo da pagina -->

      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- / #page-wrapper -->
<!-- / #wrapper <-->
