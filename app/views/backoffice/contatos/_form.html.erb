<%= form_for @contato, :html => { :class => "contato" } do |f| %>

  <% if @contato.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contato.errors.count, "error") %> prohibited this contato from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contato.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading"> <h3>Contatos</h3> </div>
    <div class="panel-body">
      <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :nome, class: 'control-label' %>
        <%= f.text_field :nome, class:'form-control', placeholder: 'Informe o nome.' %>
      </div>
      <div class="form-group">
        <%= f.label :empresa_id, class: 'control-label' %>
        <%= f.collection_select(:empresa_id, Empresa.all, :id, :razao, {include_blank: false},
            { 'class'=> 'form-control col-lg-6'}) %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'control-label ' %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Informe o email.' %>
      </div>
      <div class="form-group">
        <%= f.label :obs, class: 'control-label' %>
          <%= f.text_area :obs, class: 'form-control', placeholder: 'Inclua uma observação.' %>
      </div>
      </div><!-- formato interno -->
    </div><!-- panel-body -->
   </div><!-- panel -->

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contatos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
