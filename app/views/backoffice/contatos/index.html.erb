<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
<%= stylesheet_link_tag params[:controller] %>
<%= javascript_include_tag params[:controller] %>
<% end %>

<%- model_class = Contato -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row" style="margin-right: -150px">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="list-group">
          <h1 class="list-group-item-heading list-group-item-info" style="margin-top: 10px;">
            <center><%=t '.title', :default => model_class.model_name.human(count: @contatos.count).titleize %></center>
          </h1>
        </div>

        <table class="table table-striped table-bordered" id="contatos">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:nome) %></th>
              <th><%= model_class.human_attribute_name(:sobrenome) %></th>
              <th><%= model_class.human_attribute_name(:empresa_id) %></th>
              <th><%= model_class.human_attribute_name(:email) %></th>
              <th><%= model_class.human_attribute_name(:obs) %></th>
            </tr>
          </thead>
          <tbody>
            <% @contatos.each do |contato| %>
            <tr>
              <td><%= link_to contato.nome, contato_path(contato), :title => "Detalhar/Editar" %></td>
              <td><%= contato.sobrenome %></td>
              <td><center><%= contato.empresa.razao %></center></td>
              <td><center><%= contato.email %></center></td>
              <td><center><%= contato.obs %></center></td>
            <% end %>
          </tbody>
        </table>
        <center>
          <%= link_to t('.new', :default => t("helpers.links.new")),
          new_contato_path,
          :class => 'btn botao btn-sm' %>
        </center>
        <!--/ codigo da pagina -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- / #page-wrapper -->
<!-- / #wrapper <-->
