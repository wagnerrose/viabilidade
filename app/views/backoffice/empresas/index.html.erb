<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag params[:controller] %>
<% end %>

<%- model_class = Empresa -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row"  style="margin-right: -120px">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="list-group">
          <h1 class="list-group-item-heading list-group-item-info" style="margin-top: 10px;">
                <center><%=t '.title', :default => model_class.model_name.human(count: @empresas.count).titleize %></center>
          </h1>
        </div>
        <div class="row">
          <table class="table table-striped table-bordered" id="empresas">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:razao) %></th>
                <th><%= model_class.human_attribute_name(:nome_fantasia) %></th>
                <th><%= model_class.human_attribute_name(:cnpj) %></th>
               </tr>
            </thead>
            <tbody>
              <% @empresas.each do |empresa| %>
                <tr>
                  <td><%=link_to empresa.razao, empresa_path(empresa), :title => "Detalhar/Editar" %></td>
                  <td><%= empresa.nome_fantasia %></td>
                  <td><%= empresa.cnpj %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /div row -->
        <center>
          <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_empresa_path,
                      :class => 'btn botao btn-sm' %>
        </center>
        <!--/ codigo da pagina -->

      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>

<!-- / #page-wrapper -->
<!-- / #wrapper <-->
