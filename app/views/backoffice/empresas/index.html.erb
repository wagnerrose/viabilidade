<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag params[:controller] %>
<% end %>

<%- model_class = Empresa -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="list-group">
          <h1 class="list-group-item-heading list-group-item-info" style="margin-top: 10px;">
                <center><%=t '.title', :default => model_class.model_name.human.titleize.pluralize %></center>
          </h1>
        </div>
        <div class="row">
          <table id="empresas" class="table display" data-source="<%= empresas_url(format: "json") %>" >
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:razao) %></th>
                <th><%= model_class.human_attribute_name(:nome_fantasia) %></th>
                <th><%= model_class.human_attribute_name(:regional) %></th>
                <th><%= model_class.human_attribute_name(:cnpj) %></th>
               </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div><!-- /div row -->
        <center>
          <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_empresa_path,
                      :class => 'btn botao btn-sm' %>
        </center>
        <!--/ codigo da pagina -->

      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>

<!-- / #page-wrapper -->
<!-- / #wrapper <-->
