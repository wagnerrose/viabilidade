<%= form_for @uf, :html => { :class => "form-horizontal uf" } do |f| %>

  <% if @uf.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@uf.errors.count, "error") %> prohibited this uf from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @uf.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sigla, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :sigla, :class => 'form-control' %>
    </div>
    <%#.error_span(:sigla) %>
  </div>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%#f.error_span(:nome) %>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                uf_index_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
