<%- model_class = Uf -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid" >
    <!-- codigo da pagina -->
    <div class="row " style="margin-top: 20px;">
    <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <center><h1 >
              <%=t '.title', :default => model_class.model_name.human.titleize.upcase %>
            </h1></center>
          </div>
          <dl class="dl-horizontal" style="margin: 10px; font-size: 16px;">
            <dt><strong><%= model_class.human_attribute_name(:sigla) %>:</strong></dt>
            <dd><%= @uf.sigla %></dd>
            <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
            <dd><%= @uf.nome %></dd>
          </dl>
        </div>
      </div>
      <div class="col-lg-3"></div>
    </div> <!-- row -->
    <div class="row">
      <div class="col-lg-12">
            <center>
            <%= link_to t('.back', :default => t("helpers.links.back")),
                          uf_index_path, :class => 'btn botao btn-sm'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_uf_path(@uf), :class => 'btn botao btn-sm' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          uf_path(@uf),
                          :method => 'delete',
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn botaoApaga btn-sm' %>
            </center>
      </div> <!-- /.col-lg-12 -->
    </div><!-- row -->

  </div><!-- div container -->
</div>
