<%- model_class = Localidade -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid" >
    <!-- codigo da pagina -->
    <div class="row " style="margin-top: 20px;">
    <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <center><h1 >
              <%=t '.title', :default => model_class.model_name.human.titleize %>
            </h1></center>
          </div>
          <dl class="dl-horizontal" style="margin: 10px; font-size: 20px;">
              <dt><strong><%= model_class.human_attribute_name(:uf_id) %>:</strong></dt>
              <dd><%= @localidade.uf.sigla %></dd>
              <dt><strong><%= model_class.human_attribute_name(:localidade) %>:</strong></dt>
              <dd><%= @localidade.localidade %></dd>
              <dt><strong><%= model_class.human_attribute_name(:municipio) %>:</strong></dt>
              <dd><%= @localidade.municipio %></dd>
              <dt><strong><%= model_class.human_attribute_name(:sigla_cnl) %>:</strong></dt>
              <dd><%= @localidade.sigla_cnl %></dd>
              <dt><strong><%= model_class.human_attribute_name(:cod_cnl) %>:</strong></dt>
              <dd><%= @localidade.cod_cnl %></dd>
              <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
              <dd><%= @localidade.latitude %></dd>
              <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
              <dd><%= @localidade.longitude %></dd>
            </dl>
        </div>
      </div>
      <div class="col-lg-3"></div>
    </div> <!-- row -->
    <div class="row">
      <div class="col-lg-12">
            <center>
              <%= link_to t('.back', :default => t("helpers.links.back")),
              localidades_path, :class => 'btn botao btn-sm'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_localidade_path(@localidade), :class => 'btn botao btn-sm' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              localidade_path(@localidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn botaoApaga btn-sm' %>
            </center>
      </div> <!-- /.col-lg-12 -->
    </div><!-- row -->

  </div><!-- div container -->
</div>
