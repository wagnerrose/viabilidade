<%- model_class = Localidade -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="box-show" >
          <div class="list-group">
            <h1 class="list-group-item-heading list-group-item-info">
              <center><%=t '.title', :default => model_class.model_name.human.titleize %></center></h1>
            </div> <!-- list-group-->

            <dl class="dl-horizontal">
              <dt><strong><%= model_class.human_attribute_name(:uf_id) %>:</strong></dt>
              <dd><%= @localidade.uf.sigla %></dd>
              <dt><strong><%= model_class.human_attribute_name(:localidade) %>:</strong></dt>
              <dd><%= @localidade.localidade %></dd>
              <dt><strong><%= model_class.human_attribute_name(:municipio) %>:</strong></dt>
              <dd><%= @localidade.municipio %></dd>
              <dt><strong><%= model_class.human_attribute_name(:sigla_cnl) %>:</strong></dt>
              <dd><%= @localidade.sigla_cnl %></dd>
              <dt><strong><%= model_class.human_attribute_name(:cod_cnl) %>:</strong></dt>
              <dd><%= @localidade.cod_cnl %></dd>
              <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
              <dd><%= @localidade.latitude %></dd>
              <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
              <dd><%= @localidade.longitude %></dd>
            </dl>
          </div><!-- div show -->
          <div class="box-show " >
            <center>
              <%= link_to t('.back', :default => t("helpers.links.back")),
              backoffice_localidades_path, :class => 'btn botao btn-sm'  %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_backoffice_localidade_path(@localidade), :class => 'btn botao btn-sm' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              backoffice_localidade_path(@localidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn botaoApaga btn-sm' %>
            </center>
          </div><!-- div botoes -->
          <!--/ codigo da pagina -->

        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- / #page-wrapper -->
  <!-- / #wrapper <-->
