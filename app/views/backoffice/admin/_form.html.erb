<%= simple_form_for @admin, :html => { :class => "form-horizontal admin" } do |f| %>
<%= f.error_notification %>

  <div class="panel panel-default">
    <div class="panel-heading centro"> <h3>Administrador</h3> </div>
     <div class="panel-body">
      <div class="col-lg-3"></div>
      <div class="form-inputs col-lg-6">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true, placeholder: 'Informe a senha', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true, placeholder: 'Confirme a senha.' %>
      </div>
      <div class="col-lg-3"></div>
    </div>
  </div>

  <div class="form-group centro">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_index_path, :class => 'btn btn-default' %>
  </div>

<% end %>


