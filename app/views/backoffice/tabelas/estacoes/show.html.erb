<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
<%= stylesheet_link_tag "#{params[:controller]}" %>
<%= javascript_include_tag "#{params[:controller]}" %>
<% end %>

<%- model_class_estacao = Estacao -%>
<%- model_class_eqto = Equipamento -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->
        <div class="list-group ">
          <h1 class="list-group-item-heading list-group-item-info">
            <center><%=t '.title', :default => model_class_estacao.model_name.human.titleize %> - <%= @estacao.pop %></center>
          </h1>
        </div> <!-- list-group-->
        <div>
          <div class="container">
            <div class="row col-sm-2">
              <div>
                <%= link_to t('.back', :default => t("helpers.links.back")),
                backoffice_tabelas_estacoes_path, :class => 'btn botao btn-sm btn-block'  %>
              </div>
              <div>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_backoffice_tabelas_estacao_path(@estacao), :class => 'btn botao btn-sm btn-block' %>
              </div>
              <div>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                backoffice_tabelas_estacao_path(@estacao),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn botaoApaga btn-sm btn-block' %>
              </div>
            </div><!-- quadroBotoes -->
            <div class="row box-show col-sm-10">
              <dl class="dl-horizontal">
                <dt ><%= model_class_estacao.human_attribute_name(:nome) %>: </dt>
                <dd ><%= @estacao.nome %></dd>
                <dt ><%= model_class_estacao.human_attribute_name(:endereco) %>: </dt>
                <dd ><%=  @estacao.endereco %></dd>

                <dt ><%= model_class_estacao.human_attribute_name(:uf) %>:</dt>
                <dd><%= @estacao.uf %></dd>
                <dt ><%= model_class_estacao.human_attribute_name(:cidade) %>: </dt>
                <dd ><%= @estacao.cidade %></dd>


                <dt><%= model_class_estacao.human_attribute_name(:status) %>: </dt>
                <dd><%= @estacao.status %></dd>
                <dt><%= model_class_estacao.human_attribute_name(:cedente) %>: </dt>
                <dd><%= @estacao.cedente %></dd>
                <dt><%= model_class_estacao.human_attribute_name(:tipo) %>: </dt>
                <dd><%= @estacao.tipo %></dd>

                <dt><%= model_class_estacao.human_attribute_name(:latitude) %>: </dt>
                <dd><%= number_with_precision(@estacao.latitude, precision: 10, separator: ',' , locale: 'pt-BR') %></dd>
                <dt><%= model_class_estacao.human_attribute_name(:longitude) %>: </dt>
                <dd><%= number_with_precision(@estacao.longitude, precision: 10, separator: ',' , locale: 'pt-BR') %></dd>
              </dl> <!-- quadro dados -->
            </div>
          </div> <!-- div quadro superior -->
          <div class="list-group">
            <h1 class="list-group-item-heading list-group-item-success">
              <center><%=t '.title', :default => model_class_eqto.model_name.human.pluralize.titleize %></center>
            </h1>
          </div> <!-- list-group-->

          <div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th><%= model_class_eqto.human_attribute_name(:designacao) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:descricao) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:tipo) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:enderecamento) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:firmware) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:status) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:arco) %></th>
                  <th><%= model_class_eqto.human_attribute_name(:cluster) %></th>
                </tr>
              </thead>
              <tbody>
                <% @equipamentos.each do |equipamento| %>
                <tr>
                  <td><%= link_to equipamento.designacao, backoffice_tabelas_equipamento_path(equipamento), :title => "Detalhar" %></td>
                  <td><%= equipamento.descricao %></td>
                  <td><%= equipamento.tipo %></td>
                  <td><%= equipamento.enderecamento %></td>
                  <td><%= equipamento.firmware %></td>
                  <td><%= equipamento.status %></td>
                  <td><%= equipamento.arco %></td>
                  <td><%= equipamento.cluster %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!--/ codigo da pagina -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- / #page-wrapper -->
  <!-- / #wrapper <-->
