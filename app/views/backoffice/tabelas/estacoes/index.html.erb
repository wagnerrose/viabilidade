
<!-- carregamento inteligente dos CSS e JAVASCRIPTS  -->
<% content_for :head do %>
<%= stylesheet_link_tag params[:controller] %>
<%= javascript_include_tag params[:controller] %>
<% end %>

<%- model_class = Estacao -%>

<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <!-- codigo da pagina -->

        <div class="list-group">
          <h1 class="list-group-item-heading list-group-item-info" style="margin-top: 10px;">
            <center><%=t '.title', :default => model_class.model_name.human(count: @estacoes.count).titleize %></center>
          </h1>
        </div>

        <div class="row">
          <table class="table table-striped" id="estacoes">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:pop) %></th>
                <th><%= model_class.human_attribute_name(:nome) %></th>
                <th><%= model_class.human_attribute_name(:endereco) %></th>
                <th><%= model_class.human_attribute_name(:cidade) %></th>
                <th><%= model_class.human_attribute_name(:status) %></th>
                <th><%= model_class.human_attribute_name(:tipo) %></th>
              </tr>
            </thead>
            <tbody>
              <% @estacoes.each do |estacao| %>
              <tr>
              <td><%= link_to estacao.pop, backoffice_tabelas_estacao_path(estacao), :title => "Detalhar/Editar" %></td>
                <td><%= estacao.nome %></td>
                <td><%= estacao.endereco %></td>
                <td><%= estacao.cidade %></td>
                <td><%= estacao.status %></td>
                <td><%= estacao.tipo %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /div row -->
        <div>
          <center>
            <%= link_to t('.new', :default => t("helpers.links.new")),
            new_backoffice_tabelas_estacao_path,
            :class => 'btn botao ' %>
          </center>
        </div>
        <!--/ codigo da pagina -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- / #page-wrapper -->
<!-- / #wrapper <-->
